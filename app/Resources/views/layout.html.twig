<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}My tickets systeme{% endblock title %}</title>
    <link rel="stylesheet" href="{{ asset('bundles/Tickets/css/default.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/Tickets/css/style.css') }}">
</head>
<body>
    <nav>
        <div class="navigation">
            <ul>
                <li><a href="{{ path("ticket_index") }}">Home</a></li>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                    <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
                {% endif %}
            </ul>
        </div>
    </nav>

    <header>
        <div class="logo">
            Tickets System
        </div>

    </header>

    <div id="container">
        {% block content %}{% endblock content %}
    </div>

{% block javascript %}{% endblock javascript %}
</body>
</html>

